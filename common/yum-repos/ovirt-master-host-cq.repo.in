[main]
reposdir = /etc/reposync.repos.d
max_connections = 50
ip_resolve = 4
gpgcheck = 0
plugins = 1

[ovirt-master-tested-el7]
name = oVirt Master Latest Tested
baseurl = https://resources.ovirt.org/repos/ovirt/tested/master/rpm/el7/
enabled = 1
max_connections = 10
proxy = _none_
cost = 100
skip_if_unavailable=1
gpgcheck = 0

[ovirt-master-snapshot-static-el7]
name = oVirt Master Nightly Statics
baseurl = http://resources.ovirt.org/pub/ovirt-master-snapshot-static/rpm/el7/
enabled = 1
max_connections = 10
skip_if_unavailable=1
gpgcheck = 0

[sac-gluster-ansible-el7]
name=Copr repo for gluster-ansible
baseurl=https://copr-be.cloud.fedoraproject.org/results/sac/gluster-ansible/epel-7-$basearch/
gpgcheck=1
gpgkey=https://copr-be.cloud.fedoraproject.org/results/sac/gluster-ansible/pubkey.gpg
enabled=1
skip_if_unavailable=1

[glusterfs-6-el7]
name = GlusterFS repo
baseurl = http://mirror.centos.org/centos/7/storage/x86_64/gluster-6/
enabled = 1
max_connections = 5
skip_if_unavailable=1
gpgcheck = 0

[centos-updates-el7]
name = CentOS7 Updates
baseurl = http://mirror.centos.org/centos/7/updates/x86_64/
enabled = 1
max_connections = 10
skip_if_unavailable=1
gpgcheck = 0

[centos-base-el7]
name = CentOS7 Base
baseurl = http://mirror.centos.org/centos/7/os/x86_64/
enabled = 1
max_connections = 10
skip_if_unavailable=1
gpgcheck = 0

[centos-extras-el7]
name = CentOS7 Extras
baseurl = http://mirror.centos.org/centos/7/extras/x86_64/
enabled = 1
exclude = ansible
	epel-release
	libtomcrypt
	libtommath
	python2-crypto
	python-paramiko
max_connections = 5
skip_if_unavailable=1
gpgcheck = 0

[epel-el7]
name = Extra Packages for Enterprise Linux 7 - x86_64
baseurl = http://download.fedoraproject.org/pub/epel/7/x86_64
enabled = 1
includepkgs=
 	ansible
	ansible-doc
	epel-release
	facter
	golang
	golang-github-stretchr-testify-devel
	golang-bin
	golang-github-davecgh-go-spew-devel
	golang-github-pmezard-go-difflib-devel
	golang-github-stretchr-objx-devel
	golang-src
	hiera
	libtomcrypt
	libtommath
	nbdkit
	nbdkit-devel
	nbdkit-plugin-python2
	nbdkit-plugin-python-common
	nbdkit-plugin-vddk
	ovirt-guest-agent*
	puppet
	python2-crypto
	python2-ecdsa
	python-ordereddict
	ruby-augeas
	rubygem-rgen
	ruby-shadow
max_connections = 5
skip_if_unavailable=1
gpgcheck = 0

[centos-ovirt-4.4-testing-el7]
name = CentOS-7 - oVirt 4.4
baseurl = http://cbs.centos.org/repos/virt7-ovirt-44-testing/x86_64/os/
gpgcheck = 0
enabled = 1
ost_skip_injection = True
exclude = ovirt-host*
skip_if_unavailable=1

[centos-ovirt-common-el7]
name = CentOS-7 - oVirt common
baseurl = http://cbs.centos.org/repos/virt7-ovirt-common-testing/x86_64/os/
gpgcheck = 0
cost = 2000
enabled = 1
skip_if_unavailable=1

[centos-qemu-ev-testing-el7]
name = CentOS-7 - QEMU EV - Testing
baseurl = http://buildlogs.centos.org/centos/7/virt/x86_64/kvm-common/
gpgcheck = 0
enabled = 1
skip_if_unavailable=1

[centos-opstools-testing-el7]
name = CentOS-7 - OpsTools - testing repo
baseurl = http://buildlogs.centos.org/centos/7/opstools/x86_64/
enabled = 1
exclude = python2-qpid-proton
	qpid-proton-c
max_connections = 10
skip_if_unavailable=1
gpgcheck = 0

[centos-sclo-rh-release-el7]
name = CentOS-7 - SCLo rh
baseurl = http://mirror.centos.org/centos/7/sclo/x86_64/rh
gpgcheck = 1
enabled = 1
gpgkey = https://www.centos.org/keys/RPM-GPG-KEY-CentOS-SIG-SCLo
skip_if_unavailable=1
